    "prettier": "1.14.3"
  },
  "dependencies": {},
  "peerDependencies": {},
  "scripts": {
    "lint": "npx eslint --report-unused-disable-directives . && prettier --list-different '**/?(.)*.{md,css,scss,js,json,yaml,yml,html}'",
